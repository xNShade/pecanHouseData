<%- include("header") -%>
<h2>Personal Information</h2>
<% if(loggedin == true){ %>
<form class="form-horizontal" action="addData" method="post">
  <div class="container-fluid">
    <div class="row">
      <div class="col-sm-4">
        <label class="control-label" for="firstname">First Name</label>
        <input type="text" class="form-control" id="firstname" name="firstname">
      </div>
      <div class="col-sm-4">
        <label class="control-label" for="lastname">Last Name</label>
        <input type="text" class="form-control" id="lastname" name="lastname">
      </div>
      <div class="col-sm-4">
        <label class="control-label" for="phone">Phone</label>
        <input type="text" class="form-control" name="phone" id="phone">
      </div>
    </div>
  </div>

  <div class="container-fluid">
    <div class="row">
      <div class="col-sm-3">
        <label class="control-label" for="address">Address</label>
        <input type="text" class="form-control" name="address" id="address">
      </div>
      <div class="col-sm-3">
        <label class="control-label" for="city">City</label>
        <input type="text" class="form-control" name="city" id="city">
      </div>
      <div class="col-sm-3">
        <label class="control-label" for="state">State</label>
        <input type="text" class="form-control" name="state" id="state">
      </div>
      <div class="col-sm-3">
        <label class="control-label" for="zip">Zip</label>
        <input type="text" class="form-control" name="zip" id="zip">
      </div>
    </div>
  </div>

  <div class="container-fluid">
    <div class="row">
      <div class="col-sm-6">
        <h2>Shipping Information</h2>
        <label class="control-label" for="yesnobutton">Is the shipping address the same as billing?</label>
        <input type="radio" name="yesnobutton" value="yes" required>Yes
        <input type="radio" name="yesnobutton" value="no">No
      </div>
    </div>
  </div>

  <div id="different_address" style="display:none">
    <div class="container-fluid">
      <h2>Different address</h2>
      <div class="row">
        <div class="col-sm-4">
          <label class="control-label" for="shipfirstname">First Name</label>
          <input type="text" class="form-control" name="shipfirstname">
        </div>
        <div class="col-sm-4">
          <label class="control-label" for="shiplastname">Last Name</label>
          <input type="text" class="form-control" name="shiplastname">
        </div>
        <div class="col-sm-4">
          <label class="control-label" for="shipaddress">Address</label>
          <input type="text" class="form-control" name="shipaddress" value="">
        </div>
      </div>
    </div>

    <div class="container-fluid">
      <div class="row">
        <div class="col-sm-4">
          <label class="control-label" for="shipcity">City</label>
          <input type="text" class="form-control" name="shipcity" value="">
        </div>
        <div class="col-sm-4">
          <label class="control-label" for="shipstate">State</label>
          <input type="text" class="form-control" name="shipstate" value="">
        </div>
        <div class="col-sm-4">
          <label class="control-label" for="shipzip">Zip</label>
          <input type="text" class="form-control" name="shipzip" value="">
        </div>
      </div>
    </div>
  </div>

  <div class="container-fluid">
    <div class="row">
      <div class="col-sm-4">
        <label class="control-label" for="order_date">Date Order</label>
        <input type="text" class="form-control" name="order_date" value="" placeholder="YYYY/MM/DD" required>
      </div>
    </div>
  </div>

  <div class="container-fluid">
    <div class="row">
      <div class="col-sm-6">
        <label class="control-label" for="typeoforder">Order was made via</label>
        <input type="radio" name="typeoforder" value="online" required>Online
        <input type="radio" name="typeoforder" value="phone">By Phone
      </div>
    </div>
  </div>
  <div class="container-fluid">
    <div class="row">
      <div class="col-sm-6">
        <button class="btn" type="submit" name="button">Submit</button>
      </div>
    </div>
  </div>
</form>
<% } else { %>
  <h2>Login Not Successful</h2>
<% } %>
<%- include("footer") -%>

<script type="text/javascript">
$(document).ready(function() {

    $("input[type='radio']").click(function(){
        var hasYesAnswer = $( "input[type=radio][name=yesnobutton]:checked" ).val();
        if (hasYesAnswer == "no") {
            $('#different_address').show();
        } else {
            $('#different_address').hide();
        }
    });

});
</script>
